<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.account.profile.PhotoRequestActivity">

        <TextView
            android:id="@+id/btn_photo_rqst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/Photo_request"
            style="@style/text_view_style1"
            android:gravity="center"
            android:background="@color/gray_bg"
            android:textColor="@color/purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_photo_permits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:text="@string/Photo_permits"
            style="@style/text_view_style1"
            android:gravity="center"
            android:textColor="@color/purple"
            android:background="@color/gray_bg"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_photo_rqst" />

        <TextView
            android:id="@+id/btn_given_permits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/text_view_style1"
            android:gravity="center"
            android:textColor="@color/purple"
            android:background="@color/gray_bg"

            android:text="@string/given_permits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_photo_permits" />

</androidx.constraintlayout.widget.ConstraintLayout>