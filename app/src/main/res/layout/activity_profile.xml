<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/activity_profile_relativelayout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".fragment.trip.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name :"
                style="@style/text_profile_edit_style"/>

            <EditText
                android:id="@+id/et_name"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                style="@style/edit_text_profile_edit_style"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth :"
                style="@style/text_profile_edit_style"/>

            <TextView
                android:id="@+id/tv_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:hint="DOB"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                style="@style/edit_text_profile_edit_style"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location :"
                style="@style/text_profile_edit_style"/>

            <EditText
                android:id="@+id/et_location"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Nearest city, country"
                style="@style/edit_text_profile_edit_style"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nationality :"
                style="@style/text_profile_edit_style"/>

            <AutoCompleteTextView
                android:id="@+id/Nationality_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Nationality"
                android:singleLine="true"
                android:paddingEnd="10dp"
                style="@style/edit_text_profile_edit_style"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spoken Language :"
                style="@style/text_profile_edit_style"/>



            <MultiAutoCompleteTextView
                android:id="@+id/Lang_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Languages"
                android:singleLine="true"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                style="@style/edit_text_profile_edit_style"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height :"
                style="@style/text_profile_edit_style"/>



            <AutoCompleteTextView
                android:id="@+id/Height_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Height"
                android:singleLine="true"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                style="@style/edit_text_profile_edit_style"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Type :"
                style="@style/text_profile_edit_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_body_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingBottom="4dp"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eyes :"
                style="@style/text_profile_edit_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_eyes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingBottom="4dp"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hair :"
                style="@style/text_profile_edit_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp_hair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingBottom="4dp"
                    android:background="@color/transparent"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I want to visit :"
                style="@style/text_profile_edit_style"/>

            <EditText
                android:id="@+id/et_visit"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/background"
                android:singleLine="true"
                android:hint="City, Region, Country"
                style="@style/edit_text_profile_edit_style"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:gravity="start"
                style="@style/text_profile_edit_style"/>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/rb_male"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Male"
                    android:textColor="@color/ebony"
                    android:textSize="16sp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/rb_female"
                    android:textSize="16sp"
                    android:textColor="@color/ebony"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_marginLeft="50dp"/>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I prefer to travel with..."
                style="@style/text_profile_edit_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp">

                <CheckBox
                    android:id="@+id/cb_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Men"
                    android:textSize="16sp"
                    android:textColor="@color/ebony"
                    android:buttonTint="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary" />


                <CheckBox
                    android:id="@+id/cb_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Girls"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/ebony"
                    android:buttonTint="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_regi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@drawable/color_white_to_black" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
