<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80000000"
    android:backgroundTintMode="src_over"
    android:id="@+id/relativelayout"
    android:background="@drawable/img2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/travelprefer_form"
        android:gravity="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="#33FFFFFF"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:text="I Prefer to travel with..."/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:text="Adjust your preferences to see and be seen by those who fit them ."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">



            <CheckBox
                android:id="@+id/cb_regi_girl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layoutDirection="rtl"
                android:fontFamily="@font/montserrat"
                android:drawableStart="@drawable/avatar_girl_32"
                android:text="Girls" />

            <CheckBox
                android:id="@+id/cb_regi_men"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:buttonTint="@color/white"
                android:gravity="end|center"
                android:layout_marginEnd="60dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:drawableStart="@drawable/avatar_boy_32"
                android:text="Men"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/white"
                android:gravity="start"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.2"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/border_white"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/sp_age_from"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:gravity="center"
                            android:padding="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_age_text"
                            android:backgroundTint="@color/colorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/border_white"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/sp_age_to"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:padding="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_age_text"
                            android:backgroundTint="@color/colorPrimary"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="You can change your preferences in your Settings"/>

        <Button
            android:id="@+id/btn_save_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Preferences"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:elevation="4dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"/>



    </LinearLayout>

</RelativeLayout>